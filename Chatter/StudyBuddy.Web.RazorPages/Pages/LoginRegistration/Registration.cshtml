@page "/registration"
@model StudyBuddy.Web.RazorPages.Pages.LoginRegistration.RegistrationModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h1>Registration</h1>
@Model.Msg
<form method="post">

    <div asp-validation-summary="ModelOnly"></div>
    <div id="RadioButtonGroup">
        <input type="radio" value="student" asp-for="@Model.Profession" checked="checked" /> Student
        <input type="radio" value="teacher" asp-for="@Model.Profession" /> Teacher
    </div>
    <div>
        Choose an username
        <input type="text" asp-for="@Model.Username" />
        <span asp-validation-for="@Model.Username"></span>
    </div>
    <div>
        Choose a password
        <input type="password" asp-for="@Model.Password" />
        <span asp-validation-for="@Model.Password"></span>
    </div>
    <div>
        Repeat a password
        <input type="password" asp-for="@Model.Password2" />
        <span asp-validation-for="@Model.Password2"></span>
    </div>
    <div>
        <input type="submit" value="Register" />
    </div>
</form>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

