@page "{teacherID:int}"
@model StudyBuddy.Web.RazorPages.Pages.TeacherPage.AddModel

@{
    ViewData["Title"] = "Add";
    Layout = "_LayoutWithoutNavigation";
}
        <hr />
        <fieldset>
            <legend>Choose subject to add</legend>

            <div class="row">
                <div class="col-md-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <select class="form-control" asp-for="SubjectID" asp-items="Model.Options"></select>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-outline-success">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </fieldset>
        <hr />
        <fieldset>
            <legend>If you miss something, request new subject!</legend>

            <div class="row">
                <div class="col-md-4">
                    <form method="post">
                        <input type="text" class="form-control-plaintext" asp-for="SubjectTitle" />
                        <input type="submit" class="btn btn-outline-success" asp-page-handler="Request" value="Request" />
                    </form>
                </div>
            </div>
        </fieldset>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
