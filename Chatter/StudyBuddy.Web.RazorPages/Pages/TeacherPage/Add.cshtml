@page "{teacherID:int}"
@model StudyBuddy.Web.RazorPages.Pages.TeacherPage.AddModel

@{
    ViewData["Title"] = "Add";
}

<h1>Choose subject to add</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <select asp-for="SubjectID" asp-items="Model.Options"></select>
            </div>
            <div class="form-group">
                <button type="submit">Add</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
